<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear">
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/black"
            android:backgroundTint="#000000"
            android:background="@drawable/border_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/white"
            android:backgroundTint="#ffffff"
            android:background="@drawable/border_button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/red"
            android:backgroundTint="#ff0000"
            android:background="@drawable/border_button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/orange"
            android:backgroundTint="#ff4411"
            android:background="@drawable/border_button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/yellow"
            android:backgroundTint="#ffff00"
            android:background="@drawable/border_button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/green"
            android:backgroundTint="#00b100"
            android:background="@drawable/border_button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/blue"
            android:backgroundTint="#00008b"
            android:background="@drawable/border_button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/pink"
            android:backgroundTint="#ff1493"
            android:background="@drawable/border_button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/violet"
            android:backgroundTint="#9400d3"
            android:background="@drawable/border_button"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/skyblue"
            android:backgroundTint="#0fbed8"
            android:background="@drawable/border_button"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/linear"
        android:padding="20dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:id="@+id/above_line"
            android:background="@color/colorPrimaryDark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Border: "
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/above_line"
            android:id="@+id/TopText"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_gravity="left"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TopTextValue"
            android:layout_toRightOf="@+id/TopText"
            android:layout_below="@+id/above_line"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
        <SeekBar
            android:id="@+id/top_seek_bar"
            android:layout_below="@+id/TopText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:max ="20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom Border: "
            android:layout_marginLeft="15dp"
            android:id="@+id/BottomText"
            android:layout_below="@+id/top_seek_bar"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_gravity="left"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_seek_bar"
            android:id="@+id/BottomTextValue"
            android:layout_toRightOf="@+id/BottomText"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
        <SeekBar
            android:id="@+id/bottom_seek_bar"
            android:layout_below="@+id/BottomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:max ="15"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/bottom_seek_bar"
            android:background="@color/colorPrimaryDark"
            />
    </RelativeLayout>
</RelativeLayout>
