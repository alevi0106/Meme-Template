<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ImageEditor">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="599dp"
        android:layout_marginBottom="76dp"
        app:srcCompat="@drawable/loadingimage" />

    <EditText
        android:id="@+id/captionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dp"
        android:ems="10"
        android:textColor="#fff"
        android:inputType="textPersonName"
        android:text="Caption" />

    <Switch
        android:id="@+id/switchPos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/captionText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:textColor="#fff"
        android:text="Top/Bottom" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/captionText"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:progressTint="@color/common_google_signin_btn_text_light_pressed"
        android:thumbTint="#fff"
        android:layout_toStartOf="@+id/switchPos"
        android:layout_toLeftOf="@+id/switchPos" />

</RelativeLayout>